@model List<QuestionBankApp.Models.Question_Table1>

@{
    ViewBag.Title = "displayAllQuestion";
}
	 <style>
	 	.container{
	 		display: flex;
	 		justify-content: center;
	 		flex-wrap: wrap;
	 	}

	 	.row {
	 		background-color: honeydew;
	 		border-radius: 10px;
			 width:500px;
			 height:600px;
	 		margin: 10px;
			 padding:5px;
			
	 	}

	 	
	 </style>
<h2>ALL QUESTIONS</h2><hr >

<div class="container">
	<hr />
	@foreach (var ques in Model)
	{
		<div class="row">

			<p>
				<h4>@ques.QuestionId. @ques.Question ?</h4>
				<h5>i.@ques.Option1  </h5>
				<h5>ii.@ques.Option2 </h5>
				<h5>iii.@ques.Option3 </h5>
				<h5>iv.@ques.Option4</h5>
			</p>
			@Html.ActionLink("Select Question", "Add", new { id = ques.QuestionId }, new { @class = "btn btn-primary text-warning" })
			@Html.ActionLink("Edit Question", "Edit", new { id = ques.QuestionId }, new { @class = "btn btn-primary text-warning mt-3" })
			@Html.ActionLink("Delete Question", "Delete", new { id = ques.QuestionId }, new { @class = "btn btn-primary text-warning mt-3" })
			<hr />
		</div>
	}
</div>

